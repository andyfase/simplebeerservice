{
    "thingName": "davething",
    "location": "Vancouver",
    "short": "YVR",
    "region": "us-west-2",
    "intervals": {
        "rotateMessages": 30000,
        "publish": 1020,
        "autoScroll": 400
    },
    "topicName": "davetopic",
    "logTopic": "simpleBeerEdisonTopicLogs",
    "certs": {
        "privateKey": "/opt/sbs/cert/private.pem.key",
        "certificate": "/opt/sbs/cert/certificate.pem.crt",
        "caCert": "/opt/sbs/cert/root.pem.crt"
    },
    "components": {
        "leds": {
            "blue": 2,
            "green": 5,
            "red": 6
        },
        "sensors": {
            "Sound": {
                "pin": "A0"
            },
            "Temperature": {
                "pin": "A1"
            },
            "Flow": {
                "pin": 3,
                "freq": 1
            },
            "Proximity": {
                "pin": 4
            }
        }
    },
    "messages": [
        {
            "line1": "Beer: %s, from %s brewery",
            "line1vars": ["name", "brewery"],
            "line2": "Description: %s",
            "line2vars": ["desc"],
            "color": "#f442ce"
        },
        {
            "line1": "Beer is at %2f%% used.",
            "line1vars": ["used"],
            "line2": "Only %f liters left!",
            "line2vars": ["left"],
             "color": "#f2a7e2"
        }
    ]
}
